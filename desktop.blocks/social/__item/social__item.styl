.social__item {
  color: #b6e9dc;
  display: inline-block;
  padding: 1em 0.5em;
  transition: color 0.2s ease-in-out, border-color 0.2s ease-in-out;
}
.social__item:hover {
  color: #fff;
}


@media screen and (max-width: 1280px){
  .social__item .fa {
    font-size 1.5em;
  }
}


@media screen and (min-width: 1281px){
  .social__item .fa {
    font-size 2em;
  }
}
