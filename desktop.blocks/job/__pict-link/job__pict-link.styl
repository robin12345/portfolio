.job__pict-link {
  display: inline-block;
  vertical-align: middle;
  padding-right: 2.5em;
  max-width: 50%;
}

@media screen and (max-width: 600px){
  .job__pict-link {
    max-width 100%;
    padding-right: 0;
  }
}

@media screen and (min-width: 601px) and (max-width: 768px){
  .job__pict-link {
    max-width 70%;
    padding-right: 0;
  }
}

@media screen and (min-width: 768px) and (max-width: 1024px){
  .job__pict-link {
    padding-right: 4%;
    max-width: 50%;
  }
}