.title_level_4 {
  font-size: 1.4em;
  font-family: "Bookman", Georgia, "Times New Roman", serif;
  color: #777;
  font-weight: 700;
  margin: 0 0 1em 0;
}

@media screen and (max-width: 480px){
  .title_level_4 {
    font-size: 1.2em;
    margin: 0.5em 0;
  }
}

@media screen and (min-width: 481px) and (max-width: 1024px){
  .title_level_4 {
    font-size: 1.3em;
    margin: 1em 0;
  }
}

@media screen and (min-width: 769px) and (max-width: 1280px){
  .title_level_4 {
    font-size: 1.3em;
    margin: 0 0 1em 0;
  }
}
