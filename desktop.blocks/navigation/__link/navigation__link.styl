.navigation__link {
  display: block;
  transition: none;
  color: #fff;
  text-decoration: none;
  font-weight: bold;
  padding: 1em 0;
  font-size: 1.4em;
  cursor: pointer;
}

@media screen and (max-width: 1024px){
  .navigation__link {
    font-size 1.1em;
  }
}

@media screen and (min-width: 1025px) and (max-width: 1280px){
  .navigation__link {
    font-size 1.2em;
  }
}